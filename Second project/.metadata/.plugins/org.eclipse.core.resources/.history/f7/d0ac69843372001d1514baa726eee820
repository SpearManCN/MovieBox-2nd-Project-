<script>
	function gologout(){
		var checkFlag = confirm("로그아웃 하시겠습니까?");
		if(checkFlag){
			gologin();
		}
	}
	//=====================================================================
	function gologin(){
		document.headerForm.action="/loginPageForm.do";
		document.headerForm.method="post";
		document.headerForm.submit();
		
	}
	//======================================================================
