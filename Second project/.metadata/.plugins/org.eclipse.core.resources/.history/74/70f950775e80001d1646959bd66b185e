<script>
	$(function(){
		var seatStatus = "${requestScope.seatInfo}";
		
		
		for(var i=1; i<26; i++){
			if(seatStatus.charAt(i-1)=="0"){
				$("[name=s"+i+"]").css("background-color","red");
				$("[name=selSeat]").append("<option value="+i+">"+i+"</option>");
			}
			
		}return;
		
		
		
	});



</script>



























